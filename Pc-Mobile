local function createGUI()
    local ScreenGui = Instance.new("ScreenGui")
    local ToggleButton = Instance.new("TextButton")
    local Title = Instance.new("TextLabel")
    local PredictionToggle = Instance.new("TextButton")
    local PredictionLabel = Instance.new("TextLabel")
    local PredictionInput = Instance.new("TextBox") -- Added TextBox

    -- Parent the GUI to the Player's GUI
    ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

    -- Set up the toggle button (square shape)
    ToggleButton.Parent = ScreenGui
    ToggleButton.Size = UDim2.new(0, 50, 0, 50) -- Make it square
    ToggleButton.Position = UDim2.new(0.9, -60, 0, 10) -- Adjust position slightly
    ToggleButton.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    ToggleButton.Text = "OFF"
    ToggleButton.TextScaled = true
    ToggleButton.TextColor3 = Color3.fromRGB(0, 0, 0)

    -- Set up the title
    Title.Parent = ScreenGui
    Title.Size = UDim2.new(0, 150, 0, 20)
    Title.Position = UDim2.new(0.9, -150, 0, -15)
    Title.BackgroundTransparency = 1
    Title.Text = "Sai.lol camlock"
    Title.TextScaled = true
    Title.TextColor3 = Color3.fromRGB(255, 255, 255)

    -- Set up the prediction toggle button
    PredictionToggle.Parent = ScreenGui
    PredictionToggle.Size = UDim2.new(0, 150, 0, 30)
    PredictionToggle.Position = UDim2.new(0.9, -150, 0, 70)
    PredictionToggle.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
    PredictionToggle.Text = "Prediction: 0.149"
    PredictionToggle.TextScaled = true
    PredictionToggle.TextColor3 = Color3.fromRGB(255, 255, 255)

    -- Set up the prediction label
    PredictionLabel.Parent = ScreenGui
    PredictionLabel.Size = UDim2.new(0, 150, 0, 20)
    PredictionLabel.Position = UDim2.new(0.9, -150, 0, 55)
    PredictionLabel.BackgroundTransparency = 1
    PredictionLabel.Text = "Change Prediction"
    PredictionLabel.TextScaled = true
    PredictionLabel.TextColor3 = Color3.fromRGB(255, 255, 255)

    -- Set up the prediction input box
    PredictionInput.Parent = ScreenGui
    PredictionInput.Size = UDim2.new(0, 150, 0, 30)
    PredictionInput.Position = UDim2.new(0.9, -150, 0, 110)
    PredictionInput.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
    PredictionInput.PlaceholderText = "Enter Prediction"
    PredictionInput.TextScaled = true
    PredictionInput.TextColor3 = Color3.fromRGB(255, 255, 255)

    -- Rainbow effect for the buttons
    spawn(function()
        while true do
            for i = 0, 1, 0.01 do
                local color = Color3.fromHSV(i, 1, 1)
                ToggleButton.BackgroundColor3 = color
                PredictionToggle.BackgroundColor3 = color
                PredictionInput.BackgroundColor3 = color
                wait(0.05)
            end
        end
    end)

    -- Dragging functionality for the toggle button
    local UIS = game:GetService("UserInputService")
    local dragToggle, dragStart, startPos

    local function updateDrag(input)
        local delta = input.Position - dragStart
        ToggleButton.Position = UDim2.new(
            startPos.X.Scale,
            startPos.X.Offset + delta.X,
            startPos.Y.Scale,
            startPos.Y.Offset + delta.Y
        )
    end

    ToggleButton.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.Touch or input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragToggle = true
            dragStart = input.Position
            startPos = ToggleButton.Position
        end
    end)

    ToggleButton.InputChanged:Connect(function(input)
        if dragToggle and (input.UserInputType == Enum.UserInputType.Touch or input.UserInputType == Enum.UserInputType.MouseMovement) then
            updateDrag(input)
        end
    end)

    UIS.InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.Touch or input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragToggle = false
        end
    end)

    -- Lock-on functionality for the camera
    local cam = workspace.CurrentCamera
    local locked = false
    local lockedPlayer
    local predictionValue = 0.149 -- Default prediction value

    -- Function to get the closest player
    local function getClosestPlayer()
        local closestPlayer, shortestDistance = nil, math.huge
        for _, player in pairs(game.Players:GetPlayers()) do
            if player ~= game.Players.LocalPlayer and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
                local distance = (player.Character.HumanoidRootPart.Position - game.Players.LocalPlayer.Character.HumanoidRootPart.Position).Magnitude
                if distance < shortestDistance then
                    closestPlayer, shortestDistance = player, distance
                end
            end
        end
        return closestPlayer
    end

    -- Function to toggle lock
    local function toggleLock()
        locked = not locked
        if locked then
            lockedPlayer = getClosestPlayer()
            if lockedPlayer and lockedPlayer.Character and lockedPlayer.Character:FindFirstChild("HumanoidRootPart") then
                ToggleButton.Text = "SAI ON"
                spawn(function()
                    while locked and lockedPlayer and lockedPlayer.Character and lockedPlayer.Character:FindFirstChild("HumanoidRootPart") do
                        local targetPos = lockedPlayer.Character.HumanoidRootPart.Position + (lockedPlayer.Character.HumanoidRootPart.Velocity * predictionValue)
                        cam.CFrame = CFrame.new(cam.CFrame.Position, targetPos)
                        wait(0.03)
                    end
                end)
            else
                locked = false
                ToggleButton.Text = "SAI OFF"
            end
        else
            ToggleButton.Text = "SAI OFF"
        end
    end

    -- Bind toggle lock to button click
    ToggleButton.MouseButton1Click:Connect(toggleLock)

    -- Bind toggle lock to "Q" key press
    UIS.InputBegan:Connect(function(input, gameProcessed)
        if not gameProcessed and input.KeyCode == Enum.KeyCode.Q then
            toggleLock()
        end
    end)

    -- Change prediction value on manual input
    PredictionInput.FocusLost:Connect(function(enterPressed)
        if enterPressed then
            local newValue = tonumber(PredictionInput.Text)
            if newValue then
                predictionValue = newValue
                PredictionToggle.Text = "Prediction: " .. string.format("%.3f", predictionValue)
            else
                PredictionInput.Text = ""
                PredictionInput.PlaceholderText = "Invalid Input!"
            end
        end
    end)
end

-- Recreate the GUI if the character resets
game.Players.LocalPlayer.CharacterAdded:Connect(function()
    createGUI()
end)

-- Initial GUI creation
createGUI()
